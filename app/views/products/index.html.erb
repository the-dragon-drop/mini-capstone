<h1>Welcome to my site</h1>

<section>
  <div class="row">

    <% @products.each do |product| %>

      <div class="col-sm-4">
        <div class="product_single">
          <h2 class="product_header"><%= product.name %></h2>
          <p>Price: <%= number_to_currency(product.price) %></p>
          <a href="/products/<%= product.id %>" title="View Product"><img src="<%= product.first_image_url %>" alt="<%= product.name %>" class="img-responsive product_single_image"></a>
          <p>Description: <%= product.description %></p>
        </div>
      </div>
    <% end %>

  </div>
</section>
